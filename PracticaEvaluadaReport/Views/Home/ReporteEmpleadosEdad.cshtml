
@{
    ViewBag.Title = "ReporteEmpleadosEdad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ReporteEmpleadosEdad</h2>
<hr />
<input type="button" id="btnIncrustar" value="Ver Reporte" class="btn btn-success" />
<input type="button" id="btnDescargar" value="Descargar Reporte" class="btn btnwarning" />
<br />
<br /><label class="label-danger" style="color:white;">Parametro</label>
<input type="number" name="edadInicio" id="edadInicio" class="form-control" placeholder="edad Inicio" />
<input type="number" name="edadFIn" id="edadFin" class="form-control"  placeholder="edad Fin" />
<hr />
<iframe id="reporteParam" style="width:100%; height:600px;" frameborder="0"
        scrolling="yes">
</iframe>

@section scripts{
    <script>
    $(document).ready(function () {

             //BOTON INCRUSTAR
        $("#btnIncrustar").on("click", function () {
            var edadInicio = $("#edadInicio").val();
            var edadFin = $('#edadFin').val();
            if (edadInicio !== '' && edadFin !== '') {
                if (edadInicio > edadFin) {
             alert('Edad inicio no debe ser mayor a edad fin');
             } else {
             var url = "@Url.Action("VerReporteEmpleadosPorEdad", "Home")?edad1=" +
                 edadInicio + "&edad2=" + edadFin;
             $("#reporteParam").attr("src", url).load();
                 }
            } else {
                alert('edad inicio y fin son obligatorias.');

            }


             });
                  //BOTON DESCARGAR
        $("#btnDescargar").on("click", function () {
            var edadInicio = $("#edadInicio").val();
            var edadFin = $('#edadFin').val();
            if (edadInicio === '' && edadFin === '') {
                if (edadInicio > edadFin) {
                    alert('Edad inicio no debe ser mayor a edad fin');
                } else {
                    var url = "@Url.Action("VerReporteEmpleadosPorEdad", "Home")?edad1=" +
                        edadInicio + "&edad2=" + edadFin;
                    window.open(url);
                }
            }
                         });

    });

    </script>



}

